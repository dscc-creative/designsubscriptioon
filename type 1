<body class="bg-white text-black selection:bg-black selection:text-white">

    <div id="root"></div>

    <script type="text/babel">
        const { useState, useEffect, useRef } = React;

        // --- ICONS (Lucide workaround for CDN) ---
        const Icon = ({ name, className }) => {
            useEffect(() => {
                if (window.lucide) {
                    window.lucide.createIcons();
                }
            }, [name]);
            return <i data-lucide={name} className={className}></i>;
        };
        
        // --- Defined Icons for direct usage ---
        const Sparkles = ({ className }) => <Icon name="sparkles" className={className} />;
        const Copy = ({ className }) => <Icon name="copy" className={className} />;
        const Loader2 = ({ className }) => <Icon name="loader-2" className={className} />;
        const Check = ({ className }) => <Icon name="check" className={className} />;

        // --- COMPONENTS ---

        const Reveal = ({ children, delay = 0, className = "" }) => {
            const [isVisible, setIsVisible] = useState(false);
            const ref = useRef(null);

            useEffect(() => {
                const observer = new IntersectionObserver(([entry]) => {
                    if (entry.isIntersecting) setIsVisible(true);
                }, { threshold: 0.1 });
                if (ref.current) observer.observe(ref.current);
                return () => observer.disconnect();
            }, []);

            return (
                <div ref={ref} 
                    className={`transition-all duration-1000 cubic-bezier(0.16, 1, 0.3, 1) ${isVisible ? 'opacity-100 translate-y-0' : 'opacity-0 translate-y-24'} ${className}`}
                    style={{ transitionDelay: `${delay}ms` }}
                >
                    {children}
                </div>
            );
        };

        const ParallaxImage = () => {
             return (
                 <div className="w-full h-full bg-neutral-200 bg-[url('https://grainy-gradients.vercel.app/noise.svg')] bg-cover opacity-80"></div>
             )
        }

        const Preloader = ({ onComplete }) => {
            const [count, setCount] = useState(0);
            useEffect(() => {
                const timer = setInterval(() => {
                    setCount(prev => {
                        if (prev >= 100) {
                            clearInterval(timer);
                            setTimeout(onComplete, 500);
                            return 100;
                        }
                        return prev + 1;
                    });
                }, 15);
                return () => clearInterval(timer);
            }, []);

            return (
                <div className="fixed inset-0 bg-black z-[200] flex flex-col justify-between p-6 md:p-12 text-white origin-top transition-transform duration-1000 ease-in-out">
                    <div className="text-xl font-bold tracking-tighter lowercase">dscc</div>
                    <div className="text-[12vw] font-bold leading-none tracking-tighter self-end">{count}%</div>
                </div>
            );
        };

        // Client Wordmark Component
        const ClientLogo = ({ name, tag }) => (
            <div className="flex flex-col opacity-40 hover:opacity-100 transition-opacity duration-300 cursor-default px-12">
                <span className="text-2xl font-bold tracking-tighter uppercase whitespace-nowrap">{name}</span>
                {tag && <span className="text-[10px] font-medium tracking-widest uppercase mt-1 opacity-60">{tag}</span>}
            </div>
        );

        const App = () => {
            const [loading, setLoading] = useState(true);
            const [openFaq, setOpenFaq] = useState(null);
            
            // AI Brief State
            const [briefInput, setBriefInput] = useState('');
            const [briefResult, setBriefResult] = useState('');
            const [isGenerating, setIsGenerating] = useState(false);
            
            // Cursor Logic
            const cursorRef = useRef(null);
            useEffect(() => {
                const moveCursor = (e) => {
                    if(cursorRef.current) {
                        cursorRef.current.style.left = `${e.clientX}px`;
                        cursorRef.current.style.top = `${e.clientY}px`;
                    }
                };
                window.addEventListener('mousemove', moveCursor);
                return () => window.removeEventListener('mousemove', moveCursor);
            }, []);

            const toggleFaq = (idx) => setOpenFaq(openFaq === idx ? null : idx);

            // Mock AI Generation for Prototype
            const generateBrief = () => {
                setIsGenerating(true);
                setTimeout(() => {
                    setBriefResult(`1. PROJECT GOAL: Establish visual dominance in the fintech sector.\n\n2. VISUAL DIRECTION: Swiss Minimalist, High-Trust, Editorial.\n\n3. DELIVERABLES:\n- Pitch Deck Template (Master)\n- Social Visual System\n- One-Pager for Investors\n\n4. STRATEGIC NOTE: The aesthetic needs to signal institutional grade stability while maintaining startup velocity.`);
                    setIsGenerating(false);
                }, 2000);
            };

            const copyToClipboard = () => {
                if (briefResult) {
                    navigator.clipboard.writeText(briefResult);
                    alert("Brief copied to clipboard!");
                }
            };

            if (loading) return <Preloader onComplete={() => setLoading(false)} />;

            return (
                <div className="animate-in fade-in duration-1000">
                    <div ref={cursorRef} className="custom-cursor hidden md:block"></div>
                    <div className="noise-overlay"></div>

                    {/* HEADER */}
                    <header className="relative px-6 py-24 md:py-40 lg:px-12 max-w-screen-2xl mx-auto flex flex-col justify-between min-h-[90vh]">
                        <div className="flex justify-between items-center w-full border-b border-black pb-4 mb-20">
                            <Reveal><div className="text-xl font-bold tracking-tighter lowercase">dscc</div></Reveal>
                            <Reveal delay={100}><button className="text-sm font-medium hover:opacity-50 transition-opacity lowercase">login</button></Reveal>
                        </div>

                        <div className="flex flex-col gap-8 z-10">
                            <h1 className="text-6xl md:text-8xl lg:text-9xl font-bold tracking-tighter leading-[0.85] lowercase">
                                <Reveal delay={200}>your brand.</Reveal>
                                <Reveal delay={350}>executed.</Reveal>
                            </h1>
                            <Reveal delay={500}>
                                <p className="max-w-xl text-xl md:text-2xl leading-relaxed text-gray-600 lowercase">
                                    creative direction and senior execution for founders who need clarity, consistency, and visual stewardship.
                                </p>
                            </Reveal>
                        </div>

                        <div className="flex flex-col md:flex-row gap-4 mt-12 md:mt-24">
                            <Reveal delay={700}>
                                <button className="bg-black text-white px-8 py-5 text-xl font-medium rounded-full hover:scale-105 transition-transform duration-300 lowercase w-full md:w-auto">
                                    subscribe now
                                </button>
                            </Reveal>
                            <Reveal delay={800}>
                                <button className="bg-white text-black border border-black px-8 py-5 text-xl font-medium rounded-full hover:bg-black hover:text-white hover:scale-105 transition-all duration-300 lowercase w-full md:w-auto">
                                    book a call
                                </button>
                            </Reveal>
                        </div>
                    </header>

                    {/* CLIENTS MARQUEE (UPDATED) */}
                    <section className="border-t border-b border-gray-200 py-12 overflow-hidden bg-white">
                        <div className="max-w-screen-2xl mx-auto px-6 mb-8">
                            <Reveal><span className="text-sm font-bold tracking-widest text-gray-400 lowercase">trusted by</span></Reveal>
                        </div>
                        
                        <div className="animate-marquee flex gap-12 whitespace-nowrap mb-8 items-center">
                             {[...Array(4)].map((_, i) => (
                                <React.Fragment key={i}>
                                    <ClientLogo name="barbella co." tag="black ambition prize" />
                                    <ClientLogo name="inner millionaire" />
                                    <ClientLogo name="donata" />
                                    <ClientLogo name="quiet wealth" />
                                    <ClientLogo name="mobb accessories" />
                                    <ClientLogo name="isimemen" />
                                </React.Fragment>
                            ))}
                        </div>
                    </section>

                    {/* POSITIONING */}
                    <section className="bg-black text-white py-32 md:py-48 px-6 lg:px-12 relative overflow-hidden">
                        <div className="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[600px] h-[600px] bg-white/5 blur-[120px] rounded-full pointer-events-none"></div>
                        <div className="max-w-5xl mx-auto text-center space-y-16 relative z-10">
                            <Reveal>
                                <h2 className="text-4xl md:text-7xl font-medium tracking-tight leading-tight lowercase">
                                    you donâ€™t need another freelancer.
                                    <span className="block text-white/40 mt-4">you need a creative department.</span>
                                </h2>
                            </Reveal>
                            <Reveal delay={200}><div className="w-px h-32 bg-white/20 mx-auto"></div></Reveal>
                            <Reveal delay={400}>
                                <p className="text-xl md:text-2xl text-white/60 max-w-2xl mx-auto lowercase leading-relaxed">
                                    guided by creative directors. executed by specialists. we provide the oversight of an agency with the velocity of a subscription.
                                </p>
                            </Reveal>
                        </div>
                    </section>

                    {/* WORK SCROLLER */}
                    <section className="py-32 bg-white overflow-hidden">
                        <div className="px-6 lg:px-12 mb-12 flex justify-between items-end max-w-screen-2xl mx-auto">
                            <Reveal><h2 className="text-5xl md:text-7xl font-bold tracking-tighter lowercase max-w-2xl">selected work.</h2></Reveal>
                            <Icon name="arrow-right" className="w-8 h-8 opacity-20 hidden md:block" />
                        </div>
                        <div className="flex overflow-x-auto gap-8 px-6 lg:px-12 pb-20 snap-x snap-mandatory no-scrollbar">
                            {[1, 2, 3].map((item, index) => (
                                <div key={index} className="min-w-[85vw] md:min-w-[50vw] snap-center shrink-0">
                                    <Reveal delay={index * 100}>
                                        <div className="group cursor-none">
                                            <div className="aspect-[16/10] bg-gray-100 mb-8 rounded-[2rem] overflow-hidden relative group-hover:scale-[0.98] transition-transform duration-700">
                                                <ParallaxImage />
                                                <div className="absolute inset-0 flex items-center justify-center">
                                                     <span className="text-4xl font-bold text-gray-400 lowercase opacity-0 group-hover:opacity-100 translate-y-4 group-hover:translate-y-0 transition-all duration-500">view case</span>
                                                </div>
                                            </div>
                                            <h3 className="text-3xl font-bold mb-2 lowercase">{index === 0 ? "pitch deck overhaul" : index === 1 ? "global campaign" : "brand system"}</h3>
                                            <p className="text-gray-500 text-lg lowercase">{index === 0 ? "series b funding secured." : index === 1 ? "visual unification." : "identity management."}</p>
                                        </div>
                                    </Reveal>
                                </div>
                            ))}
                            <div className="min-w-[5vw] shrink-0"></div>
                        </div>
                    </section>
                    
                    {/* PROCESS */}
                     <section className="bg-black text-white py-32 px-6 lg:px-12">
                        <div className="max-w-screen-2xl mx-auto flex flex-col md:flex-row gap-20">
                            <div className="md:w-1/3">
                                <div className="sticky top-32">
                                    <Reveal><h2 className="text-5xl md:text-7xl font-bold tracking-tighter lowercase leading-[0.9] mb-8">the<br/>system.</h2></Reveal>
                                </div>
                            </div>
                            <div className="md:w-2/3 space-y-8">
                                {[
                                    { step: "01", title: "request", desc: "submit your brief via our portal. no unnecessary meetings." },
                                    { step: "02", title: "direction", desc: "our creative directors review the brief and set the visual strategy." },
                                    { step: "03", title: "execution", desc: "work is crafted, reviewed, and delivered within 48 hours." }
                                ].map((item, idx) => (
                                    <Reveal key={idx} className="bg-neutral-900/50 p-12 rounded-[3rem] border border-white/10 hover:border-white/30 transition-colors duration-500">
                                        <span className="text-sm font-bold text-gray-500 border border-gray-700 rounded-full px-4 py-2 mb-8 inline-block lowercase">step {item.step}</span>
                                        <h3 className="text-5xl font-bold mb-6 lowercase">{item.title}</h3>
                                        <p className="text-xl text-gray-400 leading-relaxed lowercase">{item.desc}</p>
                                    </Reveal>
                                ))}
                            </div>
                        </div>
                    </section>

                    {/* BRIEF ARCHITECT (AI Section) */}
                    <section className="py-32 px-6 lg:px-12 bg-gray-50">
                      <div className="max-w-screen-2xl mx-auto">
                         <div className="bg-white p-8 md:p-16 rounded-[3rem] shadow-2xl overflow-hidden relative">
                            <div className="absolute top-0 right-0 w-[500px] h-[500px] bg-gradient-to-bl from-blue-50 to-transparent rounded-full blur-3xl pointer-events-none opacity-50"></div>
                            
                            <div className="relative z-10 flex flex-col md:flex-row gap-16">
                              <div className="md:w-1/2">
                                <div className="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-black text-white text-xs font-bold lowercase mb-8">
                                  <Sparkles className="w-3 h-3" />
                                  gemini powered
                                </div>
                                <h2 className="text-4xl md:text-6xl font-bold tracking-tighter lowercase mb-6">brief architect.</h2>
                                <p className="text-xl text-gray-500 lowercase">turn messy thoughts into strategy-led briefs.</p>
                              </div>

                              <div className="md:w-1/2 w-full">
                                {!briefResult ? (
                                  <div className="space-y-6">
                                    <textarea 
                                      value={briefInput}
                                      onChange={(e) => setBriefInput(e.target.value)}
                                      placeholder="e.g. i need a pitch deck for a fintech startup..."
                                      className="w-full bg-gray-50 border-0 rounded-3xl p-8 text-lg lowercase resize-none focus:ring-2 focus:ring-black/5 transition-all min-h-[200px]"
                                    />
                                    <button 
                                      onClick={generateBrief}
                                      disabled={isGenerating || !briefInput.trim()}
                                      className="w-full bg-black text-white py-4 rounded-2xl font-bold hover:scale-[1.02] active:scale-[0.98] transition-transform duration-300 ease-out-expo flex items-center justify-center gap-2 lowercase"
                                    >
                                      {isGenerating ? <Loader2 className="animate-spin" /> : 'generate brief'}
                                    </button>
                                  </div>
                                ) : (
                                  <div className="bg-black text-white p-8 rounded-3xl animate-in slide-in-from-bottom-10 fade-in duration-700">
                                    <pre className="whitespace-pre-wrap font-sans text-lg text-gray-300 mb-8">{briefResult}</pre>
                                    <div className="flex justify-between">
                                      <button onClick={() => setBriefResult('')} className="text-sm text-gray-500 hover:text-white lowercase">reset</button>
                                      <button onClick={copyToClipboard} className="text-sm flex items-center gap-2 hover:text-gray-300 lowercase"><Copy className="w-4 h-4" /> copy</button>
                                    </div>
                                  </div>
                                )}
                              </div>
                            </div>
                         </div>
                      </div>
                    </section>

                    {/* SCOPE OF WORK */}
                    <section className="py-32 px-6 lg:px-12 bg-white">
                        <div className="max-w-screen-2xl mx-auto">
                            <Reveal><h2 className="text-5xl md:text-7xl font-bold tracking-tighter lowercase mb-20">scope of work.</h2></Reveal>
                            
                            <div className="grid grid-cols-1 md:grid-cols-2 gap-16 md:gap-32">
                                <div>
                                    <Reveal><h3 className="text-2xl font-bold mb-8 lowercase flex items-center gap-3"><span className="w-3 h-3 bg-black rounded-full"></span> what we do</h3></Reveal>
                                    <div className="space-y-4">
                                        {['pitch decks', 'brand identity systems', 'social visual assets', 'landing page ui', 'marketing one-pagers', 'email design', 'packaging concepts', 'basic motion graphics'].map((item, i) => (
                                            <Reveal key={i} delay={i * 50}>
                                                <div className="text-xl text-gray-600 border-b border-gray-100 py-4 lowercase flex justify-between items-center group cursor-default">
                                                    <span>{item}</span>
                                                    <Check className="w-5 h-5 opacity-0 group-hover:opacity-100 transition-opacity text-black" />
                                                </div>
                                            </Reveal>
                                        ))}
                                    </div>
                                </div>
                                <div>
                                    <Reveal><h3 className="text-2xl font-bold mb-8 lowercase text-gray-400 flex items-center gap-3"><span className="w-3 h-3 border border-gray-300 rounded-full"></span> what we don't</h3></Reveal>
                                    <div className="space-y-4">
                                         {['3d character modeling', 'complex web development', 'video shooting/production', 'long-form copywriting', 'custom illustration', 'document translation'].map((item, i) => (
                                            <Reveal key={i} delay={i * 50}>
                                                <div className="text-xl text-gray-300 border-b border-gray-50 py-4 lowercase">{item}</div>
                                            </Reveal>
                                        ))}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </section>

                    {/* PRICING & FAQ (UPDATED $5k) */}
                    <section className="py-32 px-6 lg:px-12 bg-white border-t border-gray-100">
                        <div className="max-w-4xl mx-auto text-center mb-24">
                            <Reveal><h2 className="text-5xl md:text-7xl font-bold tracking-tighter lowercase mb-8">simple pricing.</h2></Reveal>
                            <Reveal delay={200}><p className="text-2xl text-gray-500 lowercase">$5,000 / month. pause anytime.</p></Reveal>
                        </div>
                        <div className="max-w-3xl mx-auto space-y-4">
                            {[
                            { q: "why not a full-time hire?", a: "a senior designer is one person. dscc is a system. you get creative director oversight and a team of specialists for less than the cost of one employee." },
                            { q: "who does the work?", a: "our vetted execution team, guided by creative directors who ensure strategy and brand consistency." },
                            { q: "is it really unlimited?", a: "yes. add as many requests to your queue as you want. we knock them out one by one." },
                            { q: "turnaround time?", a: "48 hours on average for standard requests." },
                            { q: "contracts?", a: "monthly. pause or cancel anytime you want." },
                            { q: "communication?", a: "slack + trello. async and efficient." },
                            { q: "meetings?", a: "only if absolutely necessary. we prefer designing." }
                            ].map((item, idx) => (
                                <Reveal key={idx} delay={idx * 100}>
                                    <div onClick={() => toggleFaq(idx)} className="group bg-gray-50 hover:bg-black hover:text-white p-8 rounded-3xl cursor-none transition-colors duration-500 cursor-pointer">
                                        <div className="flex justify-between items-center">
                                            <h3 className="text-2xl font-bold lowercase">{item.q}</h3>
                                            <Icon name={openFaq === idx ? "minus" : "plus"} className="w-6 h-6" />
                                        </div>
                                        <div className={`overflow-hidden transition-all duration-500 ${openFaq === idx ? 'max-h-40 mt-4 opacity-100' : 'max-h-0 opacity-0'}`}>
                                            <p className="text-lg opacity-80 lowercase">{item.a}</p>
                                        </div>
                                    </div>
                                </Reveal>
                            ))}
                        </div>
                    </section>

                    <footer className="bg-black text-white py-24 px-6 text-center">
                        <h2 className="text-[15vw] font-bold tracking-tighter leading-none opacity-20 select-none">dscc</h2>
                        <div className="mt-12 flex justify-center gap-8 text-sm text-gray-500 lowercase">
                            <a href="#" className="hover:text-white">twitter</a>
                            <a href="#" className="hover:text-white">instagram</a>
                        </div>
                    </footer>
                </div>
            );
        };

        const root = ReactDOM.createRoot(document.getElementById('root'));
        root.render(<App />);
    </script>
</body>
</html>
